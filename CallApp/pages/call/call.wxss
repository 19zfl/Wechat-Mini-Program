/* pages/call/call.wxss */
.container {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
}
text {
    text-align: center;
    font-size: 80rpx;
}
.numBox {
    width: 600rpx;
}
.num {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    line-height: 150rpx;
    text-align: center;
    background-color: silver;
    float: left;
    margin: 20rpx 25rpx;
    font-size: 70rpx;
}
.buttonBox {
    width: 600rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
}
image.callImg {
    width: 120rpx;
    height: 120rpx;
    margin-right: 75rpx;
}
image.deleteImg {
    width: 100rpx;
    height: 100rpx;
    margin-right: 75rpx;
}