.container {
    display: flex;
    flex-direction: column;
}
image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin: 0 20rpx;
}
.bar {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 25rpx;
    padding: 5rpx;
    border-bottom: 2rpx solid silver;
}
.detail {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
}