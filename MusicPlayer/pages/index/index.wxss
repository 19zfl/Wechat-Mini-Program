.container {
	width: 100%;
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-evenly;
	background-image: linear-gradient(to top, #30cfd0, #330867);
  color: white;
}
.title{
	font-size: 40rpx;

}
.playBox{
	width: 500rpx;
	height: 700rpx;
	position: relative;
}
@keyframes disc-rotate {
	0%{transform: rotate(0deg);}
	50%{transform: rotate(180deg);}
	100%{transform: rotate(360deg);}
}
.disc-img-rotate {
	animation: disc-rotate 20s infinite normal linear;
}
.needle{
	width: 200rpx;
	position: absolute;
	z-index: 99;
}
.needle-play{
	top: 0;
	left: 220rpx;
}
.needle-stop{
	transform: rotate(-25deg);
	top: 0;
	left: 260rpx;
}
.discBox{
	width: 520rpx;
	height: 520rpx;
	background-color: rgba(250,250,250,0.5);
	border-radius: 50%;
	position: absolute;
	left: 0;
	bottom: 0;
}
.disc-border{
	width: 500rpx;
	height: 500rpx;
	position: absolute;
	left: 10rpx;
	bottom: 10rpx;
	z-index: 9;
}
.disc-cover{
	width: 350rpx;
	height: 350rpx;
	position: absolute;
	border-radius: 50%;
	left: 85rpx;
	bottom: 85rpx;
	z-index: 0;
}
.progress{
	width: 600rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
}
slider{
	width: 500rpx;
}

.btnBox{
	display: flex;
	align-items: center;
}
.big{
	width: 100rpx;
	height: 100rpx;
	margin: 0 30rpx;
}
.small{
	width: 80rpx;
	height: 80rpx;
	margin: 0 30rpx;
}
